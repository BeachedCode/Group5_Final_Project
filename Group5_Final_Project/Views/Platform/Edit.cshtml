@model Group5_Final_Project.Models.Platform
@{

    string title = ViewBag.Action + "Platform";
    ViewBag.Title = title;

}

<h2>@ViewBag.title</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <lable asp-for="Name">Name</lable>
        <input asp-for="Name" class="form-control">

    </div>



    <input type="hidden" asp-for="Id" />


    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-controller="Home" asp-action="Platforms"
       class="btn btn-primary">Cancel</a>

</form>